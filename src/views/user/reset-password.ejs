<!DOCTYPE html>
<html class="h-100" lang="en">
  <head>
    <title>
      <%= pageTitle %> | <%= siteTitle %>
    </title>
    <!-- Basic Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="shortcut icon" href="<%= favicon %>" type="image/x-icon" />
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script
      type="text/javascript"
      src="/bower_components/jquery/dist/jquery.min.js"
    ></script>
    <!-- Font Awsome-->
    <link
      rel="stylesheet"
      type="text/css"
      href="/bower_components/font-awsome/css/all.min.css"
    />
    <!--Bootstrap -->
    <link
      rel="stylesheet"
      type="text/css"
      href="/bower_components/bootstrap/dist/css/bootstrap.min.css"
    />
    <!-- Custom -->
    <link rel="stylesheet" type="text/css" href="/assets/css/main.css" />

    <!-- Site meta data -->
    <meta name="og:site_name" content="<%= siteTitle %>" />
    <meta name="twitter:title" content="<%= siteTitle %>" />
    <meta name="twitter:description" content="<%= siteDesc %>" />
    <meta name="description" content="<%= siteDesc %>" />
    <meta property="og:description" content="<%= siteDesc %>" />
    <meta name="theme-color" content="#0084da" />
    <meta content="<%= siteURL + currentPath %>" property="og:url" />
  </head>

  <body class="auth mb-0">
    <div class="form-auth">
      <div class="branding text-center mb-4">
        <img alt="Logo" src="<%= logo %>" height="60" /><span
          ><%= siteTitle %></span
        >
      </div>
      <h1>Recover your password</h1>
      <% errors = error && error.length > 0 %> <% if (errors && error[0].match){
      %>
      <div class="alert alert-danger alert-timeout" role="alert">
        <%= error[0].match %>
      </div>
      <% } %>
      <form method="POST" novalidate>
        <input type="hidden" name="_csrf" value="<%= _csrf  %>" />
        <div class="form-group">
          <input
            name="password"
            type="password"
            class="form-control <% if(errors && error[0].password){ %>is-invalid<% } else if(errors && error[0].match) { %>is-invalid<% } %>"
            id="password"
            placeholder="New password"
          />
          <div class="help-block with-errors"></div>
          <% if (errors && error[0].password) { %>
          <small class="invalid-feedback">
            <%= error[0].password %>
          </small>
          <% } %>
        </div>
        <div class="form-group">
          <input
            name="comfirmPassword"
            type="password"
            class="form-control <% if(errors && error[0].comfirmPassword){ %>is-invalid<% } else if(errors && error[0].match) { %>is-invalid<% } %>"
            id="comfirmPassword"
            placeholder="Confirm new password"
          />
          <% if (errors && error[0].comfirmPassword) { %>
          <small class="invalid-feedback">
            <%= error[0].comfirmPassword %>
          </small>
          <% } %>
        </div>
        <button type="submit" class="btn btn-auth btn-primary btn-block">
          Save Password
        </button>
      </form>
      <div class="info">
        <a href="/login">
          <small class="info text">Already have an account?</small>
        </a>
        <a href="/signup">
          <small class="info text">Create an account</small>
        </a>
      </div>
    </div>

    <!-- Bootstrap Javascript -->
    <script src="/bower_components/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom -->
    <script src="/assets/js/main.js"></script>
  </body>
</html>
