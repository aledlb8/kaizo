<div class="info header mt-3 mb-2">Toggles</div>
<div class="row">
  <div class="col-sm-6 col-xl-3 mt-2">
    <div class="form-group d-inline">
      <label for="streamerMode">Streamer Mode</label>
      <input
        id="streamerMode"
        name="streamerMode"
        value="true"
        type="checkbox"
        checked
        data-toggle="toggle"
        data-on="On"
        data-off="Off"
        data-onstyle="success"
        data-offstyle="danger"
        disabled
      />
    </div>
  </div>
  <div class="col-sm-6 col-xl-3 mt-2">
    <div class="form-group d-inline">
      <label for="verified">Verified</label>
      <input
        id="verified"
        name="verified"
        value="true"
        type="checkbox"
        checked
        data-toggle="toggle"
        data-on="On"
        data-off="Off"
        data-onstyle="success"
        data-offstyle="danger"
        disabled
      />
    </div>
  </div>
  <div class="col-sm-6 col-xl-3 mt-2">
    <div class="form-group d-inline">
      <label for="emailVerified">Email Verified</label>
      <input
        id="emailVerified"
        name="emailVerified"
        value="true"
        type="checkbox"
        checked
        data-toggle="toggle"
        data-on="On"
        data-off="Off"
        data-onstyle="success"
        data-offstyle="danger"
        disabled
      />
    </div>
  </div>
  <div class="col-sm-6 col-xl-3 mt-2">
    <div class="form-group d-inline">
      <label for="mfa">MFA</label>
      <input
        id="mfa"
        name="mfa"
        value="true"
        type="checkbox"
        checked
        data-toggle="toggle"
        data-on="On"
        data-off="Off"
        data-onstyle="success"
        data-offstyle="danger"
        disabled
      />
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
    $('#streamerMode').attr(
      'checked',
      '<%= user.streamerMode %>' === 'true' ? true : false
    );
    $('#emailVerified').attr(
      'checked',
      '<%= user.emailVerified %>' === 'true' ? true : false
    );
    $('#mfa').attr('checked', '<%= user.mfa %>' === 'true' ? true : false);
    $('#verified').attr(
      'checked',
      '<%= user.isVerified %>' === 'true' ? true : false
    );
  });
</script>
